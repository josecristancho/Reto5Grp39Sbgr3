<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".Vista.Inicio.InicioFragment">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        tools:context=".Vista.Inicio.InicioFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="300dp"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:foreground="@drawable/logofestappin"
                app:srcCompat="@drawable/ic_launcher_background" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="OBJETIVOS"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textSize="25dp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/intro1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="\nFEST, tiene como objetivo
la venta y alquiler de productos relacionados con diversos tipos de eventos y su realización."
                    android:textSize="15dp"
                    android:layout_margin="10dp"/>

                <TextView
                    android:id="@+id/intro2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nuestra prioridad es brindar un servicio
de excelente calidad, asumiendo la responsabilidad con nuestros clientes."
                    android:textSize="15dp"
                    android:layout_margin="10dp"/>

                <TextView
                    android:id="@+id/intro3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nuestro personal está capacitado para garantizar
un servicio de calidad.\n\t- Brindamos un servicio personalizado.\n\t- Asesoría constante."
                    android:textSize="15dp"
                    android:layout_margin="10dp"/>

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Misión"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textSize="25dp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="3dp"
                    android:text="Ofrecer a nuestros clientes una experriencia unica en cada uno de sus eventos con los mas altos estandares de calidad"
                    android:textSize="15dp"
                    android:layout_margin="10dp"/>

                <TextView
                    android:id="@+id/textView25"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Visión"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textSize="25dp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/textView66"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="3dp"
                    android:text="Ser para el 2025 una empresa lider en la organizacion y comercializació de implementos para eventos"
                    android:textSize="15dp"
                    android:layout_margin="10dp"/>

            </LinearLayout>

        </LinearLayout>



    </LinearLayout>

    </FrameLayout>
</ScrollView>
